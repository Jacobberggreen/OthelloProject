@using Microsoft.IdentityModel.Tokens
@using OthelloProject.Models.Methods
@using System.Diagnostics.Eventing.Reader
@model List<GameDetails>

<form asp-controller="User" asp-action="Login" method="post" class="card p-4 shadow-sm">
	<div class="mb-3">
		<label class="form-label" asp-for="Username">Username</label>
		<input class="form-control" required asp-for="Username" />
	</div>

	<div class="mb-3">
		<label class="form-label" required asp-for="Password">Password</label>
		<input class="form-control" type="password" required asp-for="Password" />
	</div>

	<div class="d-flex gap-2">
		<button type="submit" class="btn btn-primary">Login</button>
		<a class="btn btn-outline-secondary" asp-controller="User" asp-action="RegisterUser">Register</a>
	</div>
</form>